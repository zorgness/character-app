{% extends 'base.html.twig' %}

{% block title %}Hello WeaponController!{% endblock %}

{% block body %}
<h1 class="title m-5">Weapon{{weapon.name|title}}</h1>

<div class="m-5">
  <div class="d-flex justify-content-around">
    <div class="col-2">
      <img src="{{ asset('images/weapons/' ~ weapon.name|title) ~ '.png' }}" alt="{{weapon.name}}">
    </div>

    <div class="col">
      <ul>

        <li>{{ weapon.description}}</li>
        <li>power: {{ weapon.power}}</li>
      </ul>
    </div>
  </div>
</div>



{% endblock %}
