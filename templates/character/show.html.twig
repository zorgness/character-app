{% extends 'base.html.twig' %}

{% block title %}Hello CharacterController!{% endblock %}

{% block body %}
<h1 class="title m-5">Character {{player.name|title}}</h1>

<div class="m-5">
  <div class="d-flex justify-content-around">
    <div class="col-2">
      <img src="{{ asset('images/characters/' ~ player.name|title) ~ '.png' }}" alt="{{player.name}}">
    </div>

    <div class="col">
      <ul>
        <li>{{ player.sex ? 'male' : 'female' }}</li>
        <li>{{ player.age }} years</li>
        <li>force: {{ player.skills.force }}</li>
        <li>speed: {{ player.skills.speed }}</li>
        <li>mind: {{ player.skills.mind }}</li>
      </ul>
    </div>
  </div>
</div>



{% endblock %}
